{
  "manifest_version": 3,
  "name": "Save to Anytype",
  "version": "0.1.4",
  "description": "Save important web pages with your selected text in Markdown format to Anytype.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "author": "lazjedi, diemonic1",
  "homepage_url": "https://github.com/lazjedi/Save-to-Anytype",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png",
    "256": "assets/icon256.png",
    "512": "assets/icon512.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png",
      "256": "assets/icon256.png",
      "512": "assets/icon512.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "style.css",
        "popup.html",
        "popup.js",
        "popupBlocked.html",
        "popupBlocked.js",
        "localizations.json",
        "assets/settings.svg",
        "assets/cross.svg",
        "assets/dots.svg",
        "assets/trash.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
